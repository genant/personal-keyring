<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="clean_before_checkbox"
        android:summary="@string/pref_clean_before_start_recommendations"
        android:title="@string/pref_clean_before_start" />

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_duplicate_key_options"
        android:entryValues="@array/pref_duplicate_key_option_values"
        android:key="duplicate_key_action"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_duplicate_key_action" />

</PreferenceScreen>
