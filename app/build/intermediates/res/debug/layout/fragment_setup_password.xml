<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetupActivity$PasswordSectionFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/page_password_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/setup_page_password" />

        <RadioGroup
            android:id="@+id/page_password_auth_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_password_title" >

            <TextView
                android:id="@+id/page_password_auth_mode_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_mode" />

            <RadioButton
                android:id="@+id/page_password_auth_mode_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/auth_mode_password" />

            <RadioButton
                android:id="@+id/page_password_auth_mode_pin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_mode_pin" />
        </RadioGroup>

        <EditText
            android:id="@+id/page_password_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_password_auth_mode"
            android:hint="@string/password_field"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/activity_vertical_margin" />

        <EditText
            android:id="@+id/page_password_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_password_password"
            android:hint="@string/confirm_password_field"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/page_password_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/page_password_confirm_password"
            android:text="@string/setup_button_next_text" />
    </RelativeLayout>

</ScrollView><!-- From: file:/C:/Users/Antonello/java/PersonalKeyring2/app/src/main/res/layout/fragment_setup_password.xml -->